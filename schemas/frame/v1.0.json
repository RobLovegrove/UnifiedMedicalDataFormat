{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "./schemas/frame/v1.0.json",
  "title": "frame",
  "description": "Schema for a single image frame with frame-specific metadata",
  "type": "object",
  "module_type": "frame",
  "endianness": "little",
  "required": ["metadata"],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "position": {
          "type": "array",
          "description": "Position in n-dimensional space, matching the dimensions array",
          "items": { "type": "number", "format": "float32" },
          "minItems": 2,
          "maxItems": 10
        },
        "orientation": {
          "type": "object",
          "description": "Frame orientation vectors",
          "properties": {
            "row_cosine": {
              "type": "array",
              "items": { "type": "number", "format": "float32" },
              "minItems": 3,
              "maxItems": 3
            },
            "column_cosine": {
              "type": "array", 
              "items": { "type": "number", "format": "float32" },
              "minItems": 3,
              "maxItems": 3
            }
          }
        },
        "timestamp": {
          "type": "string",
          "length": 20,
          "description": "Frame acquisition timestamp (ISO 8601 format)"
        },
        "frame_number": {
          "type": "integer",
          "format": "uint16",
          "description": "Frame number in sequence"
        }
      }
    }
  }
} 