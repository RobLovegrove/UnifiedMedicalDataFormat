{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://localhost:8080/schemas/patient/v1.0.json",
  "title": "patient",
  "description": "Minimal schema for a patient module in UMDF.",
  "type": "object",
  "module_type": "tabular",
  "endianness": "little",
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["clinician", "encounter_date"],
      "properties": {
        "clinician": { "type": "string", "length": 32 },
        "encounter_date": { "type": "string", "format": "date", "length": 10 }
      }
    },
    "data": {
      "type": "object",
      "required": ["patient_id", "name", "gender", "birth_date"],
      "properties": {
        "patient_id": {
          "type": "string",
          "length": 36,
          "description": "Unique patient identifier."
        },
        "gender": {
          "type": "string",
          "enum": ["male", "female", "other", "unknown"],
          "storage": { "type": "uint8", "format": "enum" }
        },
        "birth_sex": {
          "type": "string",
          "enum": ["male", "female", "other", "unknown"],
          "storage": { "type": "uint8", "format": "enum" }
        },
        "birth_date": {
          "type": "string",
          "format": "date",
          "length": 10
        },
        "name": {
          "type": "object",
          "properties": {
            "given": { "type": "string" },
            "family": { "type": "string" }
          },
          "required": ["given", "family"]
        },
        "age": {
          "type": "integer",
          "format": "uint8"
        }
      }
    }
  }
}
