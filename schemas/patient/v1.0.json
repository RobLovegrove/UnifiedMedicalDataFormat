{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://localhost:8080/schemas/patient/v1.0.json",
  "title": "patient",
  "description": "Minimal schema for a patient module in UMDF.",
  "type": "object",
  "module_type": "tabular",
  "endianness": "little",
  "required": ["patient_id", "name", "gender", "birth_date"],
  "properties": {
    "patient_id": {
      "type": "string",
      "length": 36,
      "description": "Unique patient identifier within the UMDF file."
    },
    "gender": {
      "type": "string",
      "enum": ["male", "female", "other", "unknown"],
      "storage": {
        "type": "uint8",
        "format": "enum"
      },
      "description": "Administrative gender patient currently identifies by."
    },
    "birth_sex": {
      "type": "string",
      "enum": ["male", "female", "other", "unknown"],
      "storage": {
        "type": "uint8",
        "format": "enum"
      },
      "description": "Administrative gender patient currently identifies by."
    },
    "birth_date": {
      "type": "string",
      "format": "date",
      "length": 10,
      "description": "Date of birth in YYYY-MM-DD format."
    },
    "name": {
      "type": "object",
      "properties": {
        "given": { "type": "string" },
        "family": { "type": "string" }
      }
    },
    "age": {
      "type": "integer",
      "format": "uint8"
    }
  }
}