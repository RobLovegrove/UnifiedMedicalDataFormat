{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://localhost:8080/schemas/image/v1.0.json",
  "title": "image",
  "description": "Minimal schema for a basic image.",
  "type": "object",
  "module_type": "image",
  "endianness": "little",
  "required": ["modality", "width", "height", "bit_depth", "image_data"],
  "properties": {
    "modality": {
      "type": "string",
      "length": 10
    },
    "width": {
      "type": "integer",
      "format": "uint16"
    },
    "height": {
      "type": "integer",
      "format": "uint16"
    },
    "bit_depth": {
      "type": "integer",
      "format": "uint8"
    }
  }
}